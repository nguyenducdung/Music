<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/music_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_name" />

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/ibtn_previous"
            android:background="@drawable/ic_skip_previous_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_stop"
            android:background="@drawable/ic_stop_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_play"
            android:background="@drawable/ic_play_arrow_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_pause"
            android:background="@drawable/ic_pause_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtn_next"
            android:background="@drawable/ic_skip_next_white_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <SeekBar
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_marginRight="@dimen/margin_size"
        android:id="@+id/sb_song"
        android:layout_above="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_song_time"
        android:layout_marginLeft="@dimen/margin_size"
        android:layout_above="@+id/sb_song"
        android:textSize="@dimen/text_size_min"
        android:textColor="@color/color_white"
        android:text="@string/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>